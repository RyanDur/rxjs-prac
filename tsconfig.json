{
  "compilerOptions": {
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "experimentalDecorators": true,
    "baseUrl": "./node_modules",
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
    "lib": [
      "es5",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
